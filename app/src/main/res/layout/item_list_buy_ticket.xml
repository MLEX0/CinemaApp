<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <Spinner
        android:id="@+id/spinnerTicketPlace"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner_background"
        android:dropDownHorizontalOffset="-10dp"
        android:dropDownVerticalOffset="50dp"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPlace"
        app:layout_constraintStart_toStartOf="@+id/textViewPlace"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlace"
        tools:listitem="@layout/item_rounded_spinner" />

    <Spinner
        android:id="@+id/spinnerTicketRow"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner_background"
        android:dropDownHorizontalOffset="-10dp"
        android:dropDownVerticalOffset="50dp"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewRow"
        app:layout_constraintStart_toStartOf="@+id/textViewRow"
        app:layout_constraintTop_toBottomOf="@+id/textViewRow"
        tools:listitem="@layout/item_rounded_spinner" />

    <ImageView
        android:id="@+id/imageViewTicketBuyItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_ticket_buy_background" />

    <TextView
        android:id="@+id/textViewRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/corporateacondpro_rregular"
        android:text="Ряд"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/corporateacondpro_rregular"
        android:text="Место"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>