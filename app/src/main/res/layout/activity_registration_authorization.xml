            app:layout_constraintTop_toTopOf="@+id/imageViewEnterPassword"
            app:srcCompat="@drawable/eye_close" />

        <ImageView
            android:id="@+id/imageViewEnterPasswordEye_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="hidePassOnClick"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEnterPassword"
            app:layout_constraintEnd_toEndOf="@+id/imageViewEnterPassword"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPassword"
            app:layout_constraintTop_toTopOf="@+id/imageViewEnterPassword"
            app:srcCompat="@drawable/eye_open" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEnterPassword"
            app:layout_constraintEnd_toEndOf="@+id/imageViewEnterPassword"
            app:layout_constraintStart_toStartOf="@+id/imageViewEnterPassword"
            app:layout_constraintTop_toTopOf="@+id/imageViewEnterPassword" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEnterLogin"
            app:layout_constraintEnd_toEndOf="@+id/imageViewEnterLogin"
            app:layout_constraintStart_toStartOf="@+id/imageViewEnterLogin"
            app:layout_constraintTop_toTopOf="@+id/imageViewEnterLogin" />

        <ImageView
            android:id="@+id/imageViewAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:onClick="authOnClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEnterPassword"
            app:srcCompat="@drawable/button_two" />

        <TextView
            android:id="@+id/textViewToRegistration2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:text="Войти"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
