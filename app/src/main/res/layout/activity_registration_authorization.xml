            app:autoSizeMinTextSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewToRegistration2"
            app:layout_constraintEnd_toEndOf="@+id/imageViewToRegistration2"
            app:layout_constraintStart_toStartOf="@+id/imageViewToRegistration2"
            app:layout_constraintTop_toTopOf="@+id/imageViewToRegistration2" />

        <TextView
            android:id="@+id/textViewEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:text="Войти"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="32sp"
            app:autoSizeMinTextSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewEnterLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEnter"
            app:srcCompat="@drawable/enter_field" />

        <ImageView
            android:id="@+id/imageViewEnterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEnterLogin"
            app:srcCompat="@drawable/enter_field" />

        <ImageView
            android:id="@+id/imageViewEnterPasswordEye_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
