            app:layout_constraintTop_toTopOf="@+id/imageViewButton_toRegistration" />

        <ImageView
            android:id="@+id/imageViewAva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/ivNotAuthorized"
            app:layout_constraintStart_toStartOf="@+id/ivNotAuthorized"
