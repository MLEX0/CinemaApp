        tools:visibility="gone">

        <ImageView
            android:id="@+id/imageViewEnterLogin6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEnterLogin3"
            app:srcCompat="@drawable/enter_field" />

        <ImageView
            android:id="@+id/imageViewEnterLogin7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEnterLogin6"
            app:srcCompat="@drawable/enter_field" />

        <EditText
            android:id="@+id/editTextTextRepeatPassWordREG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:hint="Повторите пароль"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEnterLogin7"
            app:layout_constraintEnd_toEndOf="@+id/imageViewEnterLogin7"
            app:layout_constraintStart_toStartOf="@+id/imageViewEnterLogin7"
            app:layout_constraintTop_toTopOf="@+id/imageViewEnterLogin7" />

        <ImageView
            android:id="@+id/imageViewRegistrationREG"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:onClick="registrationClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEnterLogin7"
            app:srcCompat="@drawable/button_two" />

        <TextView
            android:id="@+id/textViewToRegistration6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/corporateacondpro_rregular"
