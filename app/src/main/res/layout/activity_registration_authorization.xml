            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="18sp"
            app:autoSizeMinTextSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/imageViewRegistrationREG"
            app:layout_constraintEnd_toEndOf="@id/imageViewRegistrationREG"
            app:layout_constraintStart_toStartOf="@id/imageViewRegistrationREG"
            app:layout_constraintTop_toTopOf="@id/imageViewRegistrationREG" />

        <TextView
            android:id="@+id/textViewEnter3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:text="Регистрация"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="32sp"
            app:autoSizeMinTextSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewEnterLogin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEnter3"
            app:srcCompat="@drawable/enter_field" />

        <EditText
            android:id="@+id/editTextTextEmailAddressREG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/imageViewEnterLogin3"
            app:layout_constraintEnd_toEndOf="@id/imageViewEnterLogin3"
            app:layout_constraintStart_toStartOf="@id/imageViewEnterLogin3"
            app:layout_constraintTop_toTopOf="@id/imageViewEnterLogin3" />

        <EditText
            android:id="@+id/editTextTextPassWordREG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:hint="Пароль"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEnterLogin6"
            app:layout_constraintEnd_toEndOf="@+id/imageViewEnterLogin6"
            app:layout_constraintStart_toStartOf="@+id/imageViewEnterLogin6"
            app:layout_constraintTop_toTopOf="@+id/imageViewEnterLogin6" />

        <TextView
            android:id="@+id/textViewSkip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/corporateacondpro_rregular"
            android:onClick="skipOnClick"
            android:text="Пропустить"
            android:textColor="#ABFFFFFF"
            android:textColorHighlight="#ABFFFFFF"
            android:textColorHint="#ABFFFFFF"
            android:textColorLink="#ABFFFFFF"
            android:textSize="18sp"
            app:autoSizeMinTextSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewRegistrationREG" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
