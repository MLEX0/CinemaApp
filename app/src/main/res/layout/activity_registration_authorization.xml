            android:text="Войдите или зарегистрируйтесь"
            android:textColor="#ABFFFFFF"
            android:textColorHighlight="#ABFFFFFF"
            android:textColorHint="#ABFFFFFF"
            android:textColorLink="#ABFFFFFF"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/ivNotAuthorized"
            app:layout_constraintStart_toStartOf="@+id/ivNotAuthorized"
            app:layout_constraintTop_toBottomOf="@+id/textViewYouAreNotAuth" />

        <ImageView
            android:id="@+id/imageViewButton_toRegistration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
